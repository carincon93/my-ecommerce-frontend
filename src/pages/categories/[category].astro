---
import Layout from '@/layouts/Layout.astro'

import ProductsList from '@/components/ProductsList'

const { category } = Astro.params

const categoryTitle = category?.replaceAll('-', ' ')
---

<Layout title={`${categoryTitle}`}>
    <main>
        <section class="p-10 space-y-10">
            <h1 class="text-center font-bold uppercase text-4xl mb-10">{categoryTitle}</h1>

            <ProductsList
                category={category}
                client:load
            />
        </section>
    </main>
</Layout>
